<div class="card">
  <% album.images.each do |image| %>
    <%= link_to image_tag(album.images[0], class: :card__img ), album_path(album) %>
  <% end %>
  <div class="card__body">
    <%= link_to album.title, album_path(album), class: :card__title%>
    <p class="card__summary">
      <%= album.caption %>
    </p>
    <%= link_to "by #{album.user.nickname}", user_path(album.user), class: :card__user %>
  </div>
</div>